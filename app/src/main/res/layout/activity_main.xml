<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/inAppWebViewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="600dp"
        android:text="アプリ内で開く"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/browserButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="外部ブラウザで開く"
        app:layout_constraintEnd_toEndOf="@id/inAppWebViewButton"
        app:layout_constraintStart_toStartOf="@id/inAppWebViewButton"
        app:layout_constraintTop_toBottomOf="@id/inAppWebViewButton" />

    <Button
        android:id="@+id/openButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="別アプリを開く"
        app:layout_constraintEnd_toEndOf="@id/browserButton"
        app:layout_constraintStart_toStartOf="@id/browserButton"
        app:layout_constraintTop_toBottomOf="@id/browserButton" />

    <Button
        android:id="@+id/poductButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="商品一覧"
        app:layout_constraintEnd_toEndOf="@id/openButton"
        app:layout_constraintStart_toStartOf="@id/openButton"
        app:layout_constraintTop_toBottomOf="@id/openButton" />

    <Button
        android:id="@+id/recommendButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="おすすめ商品1"
        app:layout_constraintEnd_toEndOf="@id/poductButton"
        app:layout_constraintStart_toStartOf="@id/poductButton"
        app:layout_constraintTop_toBottomOf="@id/poductButton" />

    <Button
        android:id="@+id/recommendButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="おすすめ商品2"
        app:layout_constraintEnd_toEndOf="@id/recommendButton1"
        app:layout_constraintStart_toStartOf="@id/recommendButton1"
        app:layout_constraintTop_toBottomOf="@id/recommendButton1" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="検索する"
        app:layout_constraintEnd_toEndOf="@id/recommendButton2"
        app:layout_constraintStart_toStartOf="@id/recommendButton2"
        app:layout_constraintTop_toBottomOf="@id/recommendButton2" />

</androidx.constraintlayout.widget.ConstraintLayout>